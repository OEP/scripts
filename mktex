#!/bin/bash

if [ -z "$1" ]; then
  echo "Usage $0 <texfile-basename>"
  exit 1
fi

export BASENAME=`echo -n $1 | sed -e 's/[.][.]*[^.]*$//'`

rm -f $BASENAME.bbl

if [ -e "$BASENAME.tex" ]; then
    pdflatex $BASENAME && \
      bibtex $BASENAME && \
      pdflatex $BASENAME && \
      pdflatex $BASENAME
else
    echo "No file named $BASENAME.tex"
fi
